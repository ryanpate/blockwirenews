# Production Environment Variables
# Copy this to .env on your production server

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-very-long-random-production-secret-key-here

# Database Configuration (from DigitalOcean Managed Database)
DATABASE_URL=postgresql://doadmin:password@db-host:25060/blockwire?sslmode=require

# Application Settings
ENABLE_REGISTRATION=true
AUTO_UPDATE_NEWS=true
UPDATE_INTERVAL_HOURS=1

# Optional: External API Keys
# NEWSAPI_KEY=your-newsapi-key-here
# CRYPTOPANIC_TOKEN=your-cryptopanic-token-here